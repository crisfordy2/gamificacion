<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/estilosAsignarNotas.css">
    <title>verActividadesProfe</title>
</head>
<body>

    <h1>datos actividad</h1>

    

    <div class="contenedorTotal">

        <div class="contendorDescargas">
            <% if (actividades.deliverableActivity != "" ) { %>
                <% for (var i=0; i < actividades.length; i++) { %>
        
                    <form action="/home/descargaArchivos" method="POST">                
                        <label><%= actividades[i].nameFile %></label>
                        <button type="submit">Descargar</button>
                        <input type="text" name="deliverableActivity" value="<%= actividades[i].deliverableActivity %>" style="opacity: 0;">
                    </form>
            <% } %>
                    <% } %>
        </div>


        <div class="contenedorNotas">
            <% if (actividades.deliverableActivity != "" ) { %>
                <% for (var i=0; i < actividades.length; i++) { %>
        
                    <form action="/home/asignarNotas" method="POST">
                        <label><%= actividades[i].nameFile %></label>
                        <label for="ecoins">Ecoins:</label>
                        <input type="text" name="ecoins"> 
                        <label for="noteActivity">Nota:</label>               
                        <input type="text" name="noteActivity">                
                        <button type="submit">Calificar</button>
                        <input type="text" name="idRecordActivity" value="<%= actividades[i].idRecordActivity %>" style="opacity: 0;">
                        <input type="text" name="idActivity" value="<%= actividades[i].idActivity %>" style="opacity: 0;">
                    </form>
            <% } %>
                    <% } %>      

        </div>

    </div>

    

    
    
            
</body>
</html>