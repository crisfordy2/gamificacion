<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/assets/css/estilosCursos.css" />
    <title>Curso</title>
</head>

<body>
    <header>
        <div id="header-icon">
            <p id="titulo">Gamificaci√≥n Profesor</p>
            <div id="marco-icono">
                <img src="/images/iconoHomeUser.svg" alt="imagen" id="icono" />
            </div>
        </div>

        <!-- div vacio por que se mueve el titulo-->
        <div id="header-button"></div>
    </header>

    <div id="navBar">
        <form action="/home/asignarActividad" method="POST">
            <button type="submit">Asignar Actividad</button>
            <input type="text" value="<%= idClass %>" name="idClass" style="opacity: 0;">
        </form>
        <button>Ecoins</button>
    </div>

    <section id="contenido">
        <div id="lado-izquierdo">
            <h2 class="subtitulo">notas <span><%= idClass %></span></h2>

            <div class="tablaNotas">

                <table>
                    <tr>
                        <th>Estudiante/Actividad</th>
                        <% let vector = [] %>
                        <% for (var i=0; i < notas.length; i++) { %>
                            <% if ( !vector.includes(notas[i].idActivity)) { %>
                                <% vector.push(notas[i].idActivity) %>
                                <th> <%= notas[i].nameActivity %></th>
                            <% } %>
                        <% } %>
                    </tr>

                    <% let vector2 = [] %>
                    <% for (var i=0; i < notas.length; i++) { %>
                        <% if ( !vector2.includes(notas[i].idUser)) { %>
                            <% vector2.push(notas[i].idUser) %>
                            <tr>
                                <th><%= notas[i].nameUser %></th>
                                <% for (var j=0; j < notas.length; j++) { %>
                                    <% if ( notas[i].idUser == notas[j].idUser ) { %>
                                        <th><%= notas[j].noteActivity %></th>
                                    <% } %>
                                <% } %>
                            </tr>
                        <% } %>
                    <% } %>

                </table>      

            </div>

        </div>

        <div id="lado-derecho">
            <h2 class="subtitulo">actividades</h2>

            
            <% if (actividades.nameActivity !="" ) { %>
                <% for (var i=0; i < actividades.length; i++) { %>
            <div id="contenedor-actividades">
                <div id="actividades">
                    <form action="/home/verActividadesProfe" method="POST">
                        <label>
                            <%= actividades[i].nameActivity %>
                        </label>
                        <br>
                        <label>
                            <%= actividades[i].descActivity %>
                        </label>
                        <br>
                        <button type="submit" id="cursos">Ver Acti</button>
                        <input type="text" value="<%= actividades[i].idClass %>" name="idClass" style="opacity: 0;">
                        <input type="text" value="<%= actividades[i].idActivity %>" name="idActivity" style="opacity: 0;">
                    </form>
                </div>
            </div>
                <% } %>
                    <% } %>

        </div>

    </section>
</body>

</html>